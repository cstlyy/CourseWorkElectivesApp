<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.courseworkappelectives.controllers.AdminController"
      spacing="0" styleClass="root-container"
      stylesheets="@styles.css">

    <HBox styleClass="header" alignment="CENTER_LEFT" spacing="20">
        <padding>
            <Insets top="20" right="30" bottom="20" left="30"/>
        </padding>
        <VBox>
            <Label text="Система записи на факультативы" styleClass="header-title"/>
            <Label text="Административная панель" styleClass="header-subtitle"/>
        </VBox>

        <Region HBox.hgrow="ALWAYS"/>

        <Button text="Изменить данные" onAction="#handleEditProfile" styleClass="secondary-button"/>
        <Button text="Выход" onAction="#handleLogout" styleClass="logout-button"/>
    </HBox>

    <VBox spacing="10" styleClass="content-area">
        <padding>
            <Insets top="20" right="30" bottom="20" left="30"/>
        </padding>

        <TabPane fx:id="tabPane" styleClass="custom-tabs" VBox.vgrow="ALWAYS">

            <Tab text="Кафедры" closable="false">
                <VBox spacing="15">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>

                    <Label text="Кафедры" styleClass="section-title"/>

                    <HBox spacing="10">
                        <Button text="Добавить" onAction="#handleAddDepartment" styleClass="primary-button"/>
                        <Button text="Редактировать" onAction="#handleEditDepartment" styleClass="secondary-button"/>
                        <Button text="Удалить" onAction="#handleDeleteDepartment" styleClass="secondary-button"/>
                    </HBox>

                    <TableView fx:id="departmentsTable" VBox.vgrow="ALWAYS" prefHeight="300">
                        <columns>
                            <TableColumn fx:id="deptIdColumn" text="ID" prefWidth="80"/>
                            <TableColumn fx:id="deptNameColumn" text="Название кафедры" prefWidth="700"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <Tab text="Факультативы" closable="false">
                <VBox spacing="15">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>

                    <Label text="Факультативы" styleClass="section-title"/>

                    <HBox spacing="10">
                        <Button text="Добавить" onAction="#handleAddElective" styleClass="primary-button"/>
                        <Button text="Редактировать" onAction="#handleEditElective" styleClass="secondary-button"/>
                        <Button text="Удалить" onAction="#handleDeleteElective" styleClass="secondary-button"/>
                    </HBox>

                    <TableView fx:id="electivesTable" VBox.vgrow="ALWAYS" prefHeight="300">
                        <columns>
                            <TableColumn fx:id="electIdColumn" text="ID" prefWidth="80"/>
                            <TableColumn fx:id="electNameColumn" text="Название" prefWidth="300"/>
                            <TableColumn fx:id="electDeptIdColumn" text="ID кафедры" prefWidth="100"/>
                            <TableColumn fx:id="electDeptNameColumn" text="Кафедра" prefWidth="300"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <Tab text="Семестры" closable="false">
                <VBox spacing="15">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>

                    <Label text="Семестры" styleClass="section-title"/>

                    <HBox spacing="10">
                        <Button text="Добавить" onAction="#handleAddSemester" styleClass="primary-button"/>
                        <Button text="Редактировать" onAction="#handleEditSemester" styleClass="secondary-button"/>
                        <Button text="Удалить" onAction="#handleDeleteSemester" styleClass="secondary-button"/>
                    </HBox>

                    <TableView fx:id="semestersTable" VBox.vgrow="ALWAYS" prefHeight="300">
                        <columns>
                            <TableColumn fx:id="semIdColumn" text="ID" prefWidth="80"/>
                            <TableColumn fx:id="semYearColumn" text="Год" prefWidth="150"/>
                            <TableColumn fx:id="semNumColumn" text="Номер семестра" prefWidth="200"/>
                            <TableColumn fx:id="semMinColumn" text="Мин. факультативов" prefWidth="350"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <Tab text="Планы" closable="false">
                <VBox spacing="15">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>

                    <Label text="Планы факультативов" styleClass="section-title"/>

                    <HBox spacing="10">
                        <Button text="Добавить" onAction="#handleAddPlan" styleClass="primary-button"/>
                        <Button text="Редактировать" onAction="#handleEditPlan" styleClass="secondary-button"/>
                        <Button text="Удалить" onAction="#handleDeletePlan" styleClass="secondary-button"/>
                    </HBox>

                    <TableView fx:id="plansTable" VBox.vgrow="ALWAYS" prefHeight="300">
                        <columns>
                            <TableColumn fx:id="planIdCol" text="ID" prefWidth="50"/>
                            <TableColumn fx:id="planElectIdCol" text="ID факультатива" prefWidth="120"/>
                            <TableColumn fx:id="planElectCol" text="Факультатив" prefWidth="180"/>
                            <TableColumn fx:id="planSemIdCol" text="ID семестра" prefWidth="100"/>
                            <TableColumn fx:id="planYearCol" text="Год" prefWidth="70"/>
                            <TableColumn fx:id="planSemCol" text="Семестр" prefWidth="80"/>
                            <TableColumn fx:id="planLecCol" text="Лекции" prefWidth="70"/>
                            <TableColumn fx:id="planPracCol" text="Практики" prefWidth="80"/>
                            <TableColumn fx:id="planLabCol" text="Лабораторные работы" prefWidth="70"/>
                            <TableColumn fx:id="planTotalCol" text="Всего" prefWidth="70"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <Tab text="Студенты" closable="false">
                <VBox spacing="15">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>

                    <Label text="Студенты" styleClass="section-title"/>

                    <HBox spacing="10">
                        <Button text="Добавить" onAction="#handleAddStudent" styleClass="primary-button"/>
                        <Button text="Редактировать" onAction="#handleEditStudent" styleClass="secondary-button"/>
                        <Button text="Удалить" onAction="#handleDeleteStudent" styleClass="secondary-button"/>
                    </HBox>

                    <TableView fx:id="studentsTable" VBox.vgrow="ALWAYS" prefHeight="300">
                        <columns>
                            <TableColumn fx:id="studIdColumn" text="ID" prefWidth="60"/>
                            <TableColumn fx:id="studSurnameColumn" text="Фамилия" prefWidth="150"/>
                            <TableColumn fx:id="studNameColumn" text="Имя" prefWidth="150"/>
                            <TableColumn fx:id="studPatronymicColumn" text="Отчество" prefWidth="150"/>
                            <TableColumn fx:id="studAddressColumn" text="Адрес" prefWidth="200"/>
                            <TableColumn fx:id="studPhoneColumn" text="Телефон" prefWidth="150"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <Tab text="Записи" closable="false">
                <VBox spacing="15">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>

                    <Label text="Записи студентов на факультативы" styleClass="section-title"/>

                    <HBox spacing="10">
                        <Button text="Добавить запись" onAction="#handleAddEnrollment" styleClass="primary-button"/>
                        <Button text="Изменить запись" onAction="#handleEditEnrollment" styleClass="secondary-button"/>
                        <Button text="Удалить запись" onAction="#handleDeleteEnrollment" styleClass="secondary-button"/>
                    </HBox>


                    <TableView fx:id="enrollmentsTable" VBox.vgrow="ALWAYS" prefHeight="300">
                        <columns>
                            <TableColumn fx:id="enrIdColumn" text="ID записи" prefWidth="90"/>
                            <TableColumn fx:id="enrStudIdColumn" text="ID студента" prefWidth="100"/>
                            <TableColumn fx:id="enrStudColumn" text="Студент" prefWidth="200"/>
                            <TableColumn fx:id="enrPlanIdColumn" text="ID плана" prefWidth="80"/>
                            <TableColumn fx:id="enrElectColumn" text="Факультатив" prefWidth="200"/>
                            <TableColumn fx:id="enrYearColumn" text="Год" prefWidth="70"/>
                            <TableColumn fx:id="enrSemColumn" text="Семестр" prefWidth="90"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <Tab text="Оценки" closable="false">
                <VBox spacing="15">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>

                    <Label text="Оценки" styleClass="section-title"/>

                    <HBox spacing="10">
                        <Button text="Добавить" onAction="#handleAddGrade" styleClass="primary-button"/>
                        <Button text="Редактировать" onAction="#handleEditGrade" styleClass="secondary-button"/>
                        <Button text="Удалить" onAction="#handleDeleteGrade" styleClass="secondary-button"/>
                    </HBox>

                    <TableView fx:id="gradesAdminTable" VBox.vgrow="ALWAYS" prefHeight="300">
                        <columns>
                            <TableColumn fx:id="grIdColumn" text="ID оценки" prefWidth="90"/>
                            <TableColumn fx:id="grEnrIdColumn" text="ID записи" prefWidth="90"/>
                            <TableColumn fx:id="grStudColumn" text="Студент" prefWidth="220"/>
                            <TableColumn fx:id="grElectColumn" text="Факультатив" prefWidth="220"/>
                            <TableColumn fx:id="grDateColumn" text="Дата" prefWidth="120"/>
                            <TableColumn fx:id="grValueColumn" text="Оценка" prefWidth="140"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
        </TabPane>
    </VBox>
</VBox>